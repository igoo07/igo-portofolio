{
    "version": 2,
    "functions": {
      "api/index.php": { "runtime": "vercel-php@0.7.2" }
    },
    "routes": [
      { "src": "/build/(.*)", "dest": "/public/build/$1" },
      { "src": "/(css|js|images|favicon.ico)/(.*)", "dest": "/public/$1/$2" },
      { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "env": {
      "APP_ENV": "production",
      "APP_DEBUG": "true",
      "SESSION_DRIVER": "cookie",
      "DB_CONNECTION": "sqlite",
      "DB_DATABASE": "/var/task/user/database/database.sqlite"
    }
  }